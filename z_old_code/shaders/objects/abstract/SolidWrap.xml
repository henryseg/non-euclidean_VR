<?xml version="1.0" encoding="UTF-8"?>
<library>
    <background>
    </background>
    <items>
        <solid class="solidWrap">
            <shader type="declare">
                Solid {{name}};
            </shader>
            <shader type="setup">
                {{name}} = {{toGLSL}};
            </shader>
            <shader type="sdf">
                float wrap = {{wrap.name}}SDF(v);
                if(wrap > marchingThreshold) {
                    return wrap;
                }
                return {{solid.name}}SDF(v);
            </shader>
            <shader type="gradient">
                return {{solid.name}}Grad(v);
            </shader>
        </solid>
    </items>
</library>