{
    "plugins": [
        "plugins/markdown"
    ],
    "markdown": {
        "tags": ["todo"]
    },
    "source": {
        "include": [
            "../js/"
        ],
        "exclude": [
            "../js/lib",
            "../js/unittest"
        ],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },

    "opts" : {
        "destination": "./jsdoc/",
        "readme": "./jsdoc.md",
        "recurse": true,
        "template": "./node_modules/foodoc/template"
    },

    "templates": {
        "systemName"            : "Non-euclidean VR",
        "systemSummary"         : "First person exploration of Thurston's geoemtries",
        "includeDate"           : "true"
    }
}
